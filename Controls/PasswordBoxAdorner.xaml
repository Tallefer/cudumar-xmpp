<UserControl x:Class="Cudumar.PasswordBoxAdorner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" GotFocus="UserControl_GotFocus" Focusable="True">
  <Grid>
    <TextBlock Name="lbPlaceholder" VerticalAlignment="Center" Padding="4 0 0 0"></TextBlock>
    <PasswordBox Name="txtBox" VerticalAlignment="Center" Background="Transparent" PasswordChanged="txtBox_PasswordChanged" />
    <Image Name="imgIcon" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0 0 5 0" Cursor="Hand" MouseDown="Image_MouseDown" Stretch="None">
    </Image>
  </Grid>
</UserControl>

